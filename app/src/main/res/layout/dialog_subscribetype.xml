<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:background="@color/colorWhite"
    android:padding="10px">



    <ScrollView android:layout_width="match_parent"
        android:layout_height="wrap_content"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto">

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/colorPrimary"
                    android:fontFamily="@font/poppins_regular"
                    android:id="@+id/textViewSubscriptionPlanName"
                    android:gravity="center"
                    android:layout_gravity="top"
                    android:padding="8dp"
                    android:text="Subscribe 1"
                    android:textColor="@color/colorWhite"
                    android:textStyle="bold"
                    android:textSize="16dp" />



                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:layout_marginTop="10dp"
                    android:weightSum="1"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="0.4"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:background="@color/colorWhite"
                        android:fontFamily="@font/poppins_regular"
                        android:gravity="center"
                        android:hint="Subscribe id:"
                        android:padding="8dp"
                        android:textColor="@color/black"
                        android:textStyle="bold"
                        android:textSize="11dp" />

                    <TextView
                        android:id="@+id/textViewSubjectID"
                        android:layout_width="0dp"
                        android:layout_weight="0.6"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:background="@drawable/shape"
                        android:fontFamily="@font/poppins_regular"
                        android:padding="8dp"
                        android:textColor="@color/colorPrimary"
                        android:textSize="11dp" />

                </LinearLayout>



                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal">


                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="0.4"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:background="@color/colorWhite"
                        android:fontFamily="@font/poppins_regular"
                        android:gravity="center"
                        android:padding="8dp"
                        android:hint="Plan Type:"
                        android:textStyle="bold"
                        android:textColor="@color/black"
                        android:textSize="11dp" />


                    <TextView
                        android:id="@+id/textViewPlanType"
                        android:layout_width="0dp"
                        android:layout_weight="0.6"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:background="@drawable/shape"
                        android:fontFamily="@font/poppins_regular"
                        android:padding="8dp"
                        android:textColor="@color/colorPrimary"
                        android:textSize="11dp" />

                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal">


                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="0.4"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:background="@color/colorWhite"
                        android:fontFamily="@font/poppins_regular"
                        android:gravity="center"
                        android:padding="8dp"
                        android:hint="MembershipType:"
                        android:textColor="@color/black"
                        android:textStyle="bold"
                        android:textSize="11dp" />



                    <TextView
                        android:id="@+id/textViewMemberShipType"
                        android:layout_width="0dp"
                        android:layout_weight="0.6"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:background="@drawable/shape"
                        android:fontFamily="@font/poppins_regular"
                        android:padding="8dp"
                        android:textColor="@color/colorPrimary"
                        android:textSize="11dp" />
                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal">


                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="0.4"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:background="@color/colorWhite"
                        android:fontFamily="@font/poppins_regular"
                        android:gravity="center"
                        android:padding="8dp"
                        android:hint="Price:"
                        android:textColor="@color/black"
                        android:textStyle="bold"
                        android:textSize="11dp" />



                    <TextView
                        android:id="@+id/textViewPrice"
                        android:layout_width="0dp"
                        android:layout_weight="0.6"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:background="@drawable/shape"
                        android:fontFamily="@font/poppins_regular"
                        android:padding="8dp"
                        android:textColor="@color/colorPrimary"
                        android:textSize="11dp" />
                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal">


                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="0.4"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:background="@color/colorWhite"
                        android:fontFamily="@font/poppins_regular"
                        android:gravity="center"
                        android:padding="8dp"
                        android:hint="PlanType Name:"
                        android:textStyle="bold"
                        android:textColor="@color/black"
                        android:textSize="11dp" />


                    <TextView
                        android:id="@+id/textViewPlanTypeName"
                        android:layout_width="0dp"
                        android:layout_weight="0.6"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:background="@drawable/shape"
                        android:fontFamily="@font/poppins_regular"
                        android:padding="8dp"
                        android:textColor="@color/colorPrimary"
                        android:textSize="11dp" />

                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal">


                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="0.4"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:background="@color/colorWhite"
                        android:fontFamily="@font/poppins_regular"
                        android:gravity="center"
                        android:padding="8dp"
                        android:hint="MembershipType Name:"
                        android:textStyle="bold"
                        android:textColor="@color/black"
                        android:textSize="11dp" />


                    <TextView
                        android:id="@+id/textViewMembershipTypeName"
                        android:layout_width="0dp"
                        android:layout_weight="0.6"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:background="@drawable/shape"
                        android:fontFamily="@font/poppins_regular"
                        android:padding="8dp"
                        android:textColor="@color/colorPrimary"
                        android:textSize="11dp" />

                </LinearLayout>





            </LinearLayout>


            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="10dp"
                android:background="@color/black"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:padding="7dp">

                <Button
                    android:id="@+id/btnBuyPlan"
                    android:layout_width="match_parent"
                    android:background="@drawable/bg_rounded_orange"
                    android:textColor="@color/colorWhite"
                    android:layout_height="wrap_content"
                    android:textSize="17dp"
                    android:text="Buy Plan"/>





            </LinearLayout>




        </LinearLayout>



    </ScrollView>
    <!--<android.support.v7.widget.RecyclerView-->
        <!--android:id="@+id/recycler"-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:layout_marginTop="5dp">-->


    <!--</android.support.v7.widget.RecyclerView>-->

</LinearLayout>